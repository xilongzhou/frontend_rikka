<h1>Welcome to RIKKA BEAUTY</h1>
<h2>Sign Up</h2>

<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
  <p>
    <%= f.label :First_Name %><br>
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label :Last_Name %><br>
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :Username %><br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :Phone_Number %><br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :Password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :Confirm_Password %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :Admin_Verification %><br>
    <%= f.text_field :magicCode %>
  </p>
  <%= link_to '<button type="button">Sign Up</button>'.html_safe, signin_users_path %>
<% end %>


<%= form_for :user do |f| %>
<fieldset>
  <legend>Please Log In</legend>
  
    <div class="left"><%= label_tag :name, 'Name:' %></div>
    <div class="right"><%= text_field_tag :name, params[:name] %></div>

    <div class="left"><%= label_tag :password, 'Password:' %></div>
    <div class="right"><%= password_field_tag :password, params[:password] %></div>

    <div class="right"><div class="button"><%= submit_tag "Login" %></div></div>

</fieldset>
<% end %>


<%= link_to 'Back', signin_users_path %>

